version 2.1
name: learn-github-actions
on: [push]
orbs: 
  codecov: codecov/codecov@3.2.2
jobs:
  check-bats-version:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - uses: actions/setup-node@v2
        with:
          node-version: '14'
      - run: npm install -g bats
      - run: bats -v
